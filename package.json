{
  "name": "api-vendas",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/shared/infra/http/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:rodar": "npm run typeorm -d src/shared/infra/typeorm/index.ts migration:run",
    "test": "jest",

    "minikube:start": "minikube start",
    "minikube:dashboard": "minikube dashboard",
    "minikube:ip": "minikube service mv-user-server",
    "docker:ip": "sudo ip addr show docker0",

    "docker:build": "docker build --no-cache --progress=plain -t mv_user_server:0.0.10 .",
    "docker:do:tag": "docker tag mv_user_server:0.0.10 registry.digitalocean.com/mv-user/mv_user_server:0.0.10",
    "docker:do:push": "docker push registry.digitalocean.com/mv-user/mv_user_server:0.0.10",

    "kubectl:get:service:ingress":"kubectl get svc -n ingress-nginx",


    "docker:run": "docker run -d -p 3333:3333 --network host --name mv-user-server zemttecnologia/mv_user_server",
    "docker:push": "docker push zemttecnologia/mv_user_server",
    "docker-compose:up": "docker-compose up -d --name mv-user-server --build",
    "kubectl:get-deploy": "kubectl get deployment",
    "kubectl:deploy": "kubectl create deployment mv-user-server --image=zemttecnologia/mv_user_server",
    "kubectl:service": "kubectl expose deployment mv-user-server --type=LoadBalancer --port=3333"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.12",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.21",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.10",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "celebrate": "^13.0.4",
    "class-transformer": "^0.3.1",
    "cors": "^2.8.5",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "handlebars": "^4.7.6",
    "jsonwebtoken": "^8.5.1",
    "mime": "^2.5.0",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.4.17",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.4.0",
    "typeorm": "^0.3.6",
    "uuid": "^8.3.2"
  }
}
